        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.full_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.create_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.avatar)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.user_id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.user_id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.user_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
